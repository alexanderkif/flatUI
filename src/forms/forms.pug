mixin form-input(placeholder, btntext, btncolor)
    .form-block
        input.form-input(type="text" placeholder=placeholder)
        input.form-button(type="button", value=btntext, class='form-button-'+btncolor)
        .button-arrow(class='form-button-'+btncolor)

mixin textarea(placeholder, cols, rows)
    .form-block
        textarea.form-input.form-textarea(placeholder=placeholder, cols=cols, rows=rows)

mixin toggle(name, value, tglclass, checked)
    .toggle
        if checked
            input(type="checkbox", name=name, value=value, class=tglclass, checked="checked", autocomplete="off")
        else
            input(type="checkbox", name=name, value=value, class=tglclass, autocomplete="off")

mixin form
    form(action="", method="get")
        .form-left
            +form-input('Your Name', 'ERROR', 'red')
            +form-input('Your Email', 'THANKS!', 'green')
            +textarea("Your Message", "30", "4")
            .form-block
                +button('submit', 'green')
        .form-right
            .form-block.center
                .header.header-informs toggles
            .form-block.center                
                +toggle("check-1","4","lcs_check",false)
                +toggle("check-3","6","lcs_check lcs_tt1",true)
            .form-block.center
                .header.header-informs tick boxes
            .form-block.center
                +tick('active')
                +tick('')