include ../components/header/header
include ../components/news/news
include ../components/event/event

mixin news-events-row({header,news,event})
    .news-events-row
        header.news-events-row__header 
            +header(header)
        ul.news-events-row__content
            li.news-events-row__item
                +news(news.header, news.date, news.text, news.img, news.href)
            li.news-events-row__item
                +event(event.header, event.date, event.month , event.text, event.img)
