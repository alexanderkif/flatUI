- var page= 'Currency'

html
    head
        meta(charset='UTF-8')
        title= page
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(href="https://unpkg.com/ionicons@4.3.0/dist/css/ionicons.min.css" rel="stylesheet")
        link(rel="stylesheet" href="style.css")
        
    body
        .stat-div
            +header(page)

            //- = = = = = = Insert page here = = = = = = = = =
            .stat-page
                .stat-page-center
                    //- .block
                    h1 USD/RUB exchange rates
                    .block
                        +percentage(64)
                        +percentage(67)
                        +percentage(68)
                        +percentage(66)
                        +percentage(67)
                    .block
                        span 09.08.2018
                        span 11.08.2018
                        span 14.08.2018
                        span 16.08.2018
                        span 17.08.2018

                    .block-btn
                        .left
                            span Prev
                            +button('<', 'arrow')
                        .right
                            +button('>', 'arrow disable')
                            span Next
                        
                    h1 recommendation

                    .block
                        .left
                            +percentage4list(50,35,10,400)
                        .right
                            .row
                                .color.color-1
                                span Buy
                            .row
                                .color.color-2
                                span Sell
                            .row
                                .color.color-3
                                span Hold
                            .row
                                .color.color-4
                                span No recomendations


        .block1
            +slider1(40)
            +slider2(75)
        .block1
            span Brightness
            span Contrast

            //- = = = = = = = = end of page = = = = = = = = = =
        .stat-div
            +footer
