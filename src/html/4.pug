include ../components/arrow-button/arrow-button
include ../percentages/percentages
include ../components/sectors/sectors
include ../components/sliderm3/sliderm3
include ../page-header/page-header
include ../footer/footer

- var page= 'Currency'

html
    head
        meta(charset='UTF-8')
        title= page
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(href="https://unpkg.com/ionicons@4.3.0/dist/css/ionicons.min.css" rel="stylesheet")
        link(rel="stylesheet" href="style.css")
        
    body
        .stat-page
            +page-header(page)

            //- = = = = = = Insert page here = = = = = = = = =
            .stat-page__wrapper
                .stat-page_center
                    //- .block
                    h1 USD/RUB exchange rates
                    .stat-page__row
                        +percentage(64)
                        +percentage(67)
                        +percentage(68)
                        +percentage(66)
                        +percentage(67)
                    .stat-page__row
                        span 09.08.2018
                        span 11.08.2018
                        span 14.08.2018
                        span 16.08.2018
                        span 17.08.2018

                    .stat-page__row.stat-page__row_w300
                        .stat-page__item
                            span Prev
                        +arrow-button("keyboard_arrow_left", [])
                        +arrow-button("keyboard_arrow_right", ['disabled'])
                        .stat-page__item
                            span Next
                        
                    h1 recommendation
                    .stat-page__row
                        .stat-page__row_left
                            +sectors({"sectors" : [
                                { "#747474" : 10},
                                { "#e75735" : 25},
                                { "#4eb7a8" : 30}
                                ],
                                "size" : 300
                            })
                        .stat-page__row_right
                            .stat-page__colors
                                .stat-page__color.stat-page__color_grey
                                span Buy
                            .stat-page__colors
                                .stat-page__color.stat-page__color_red
                                span Sell
                            .stat-page__colors
                                .stat-page__color.stat-page__color_green
                                span Hold
                            .stat-page__colors
                                .stat-page__color.stat-page__color_lightgray
                                span No recommendation


            .stat-page__controls
                .stat-page__row.stat-page__row_left
                    .stat-page__header Brightness
                    //- sliderm3(min, max, value1, value2, step, intervals, hint, scale, interval, vertical,  
                    //-     verticalSize, lineHeight, pointSize, colorLine, colorPoint, colorScale, colorText)
                    +sliderm3(0, 100, 20, 40, 1, 3, 'true', '', '', '', 250, 5, 20, '#e6e6e6', '#e75735', '#e75735', 'lightgrey', 'white')
                    //- +sliderm3(20, 120, 20, 70, 5, 3, 'true', 'true', 'true', '', 220, 15, 30, '#e6e6e6', '#e6a6a6', 'rgb(231, 87, 53, 0.4)', 'lightgrey', 'white')
 
                .stat-page__row.stat-page__row_right
                    .stat-page__header Contrast
                    +sliderm3(0, 100, 0, 75, 25, 4, '', 'true', '', '', 250, 5, 20, '#e6e6e6', '#e6e6e6', '#4eb7a8', 'lightgrey', 'white')
            


            //- = = = = = = = = end of page = = = = = = = = = =
        +footer
