include ../sliderm2/sliderm2
include ../tick/tick
include ../chooseColor/chooseColor

- var page= 'Sliderm2 page'

html
    head
        meta(charset='UTF-8')
        title= page
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
        link(href="https://unpkg.com/ionicons@4.3.0/dist/css/ionicons.min.css" rel="stylesheet")
        link(rel="stylesheet" href="style.css")
        
    body
        .sliderm2page
            .sliderm2page__header sliderm2
            .sliderm2page__content
                .sliderm2page__slider.sliderm2page__slider_1st
                    //- sliderm2(min, max, value1, value2, step, intervals, hint, scale, interval, vertical,  
                    //-     verticalSize, lineHeight, pointSize, colorLine, colorPoint, colorScale, colorText) rgb(250, 235, 215, 0.5)
                    +sliderm2(20, 120, 40, 60, 2, 3, 'true', '', '', 'true', 220, 15, 30, '#e6e6e6', 'rgb(231, 87, 53)', 'lightgrey', 'white')
                .sliderm2page__inputs
                    .sliderm2page__inputs-item
                        .sliderm2page__label ScaleMin
                        input.sliderm2page__input.sliderm-min
                    .sliderm2page__inputs-item
                        .sliderm2page__label ScaleMax
                        input.sliderm2page__input.sliderm-max
                    .sliderm2page__inputs-item
                        .sliderm2page__label Value1
                        input.sliderm2page__input.sliderm-value1
                    .sliderm2page__inputs-item
                        .sliderm2page__label Value2
                        input.sliderm2page__input.sliderm-value2
                    .sliderm2page__inputs-item
                        .sliderm2page__label Step
                        input.sliderm2page__input.sliderm-step
                    .sliderm2page__inputs-item
                        .sliderm2page__label Scale Intervals
                        input.sliderm2page__input.sliderm-intervals
                    .sliderm2page__inputs-item
                        .sliderm2page__label.sliderm2page__label_shot Hint
                        +tick('tick-hint')
                        .sliderm2page__label.sliderm2page__label_shot Interval
                        +tick('tick-interval')
                    .sliderm2page__inputs-item
                        .sliderm2page__label.sliderm2page__label_shot Scale
                        +tick('tick-scale')
                        .sliderm2page__label.sliderm2page__label_shot Vertical
                        +tick('tick-vertical')
                    .sliderm2page__inputs-item
                        .sliderm2page__label Length
                        input.sliderm2page__input.sliderm-length
                    .sliderm2page__inputs-item
                        +chooseColor(231, 87, 53, 255)
                textarea(rows="5").sliderm2page__result
            hr
            .sliderm2page__content
                .sliderm2page__slider.sliderm2page__slider_2nd
                    //- sliderm2(min, max, value1, value2, step, intervals, hint, scale, interval, vertical,  
                    //-     verticalSize, lineHeight, pointSize, colorLine, colorPoint, colorScale, colorText)
                    +sliderm2(70, 120, 80, 100, 0.5, 6, '', 'true', '', '', 350, 8, 16, '#e6e6e6', 'rgba(200, 100, 200, 1)', 'lightgrey', 'black')
                .sliderm2page__inputs
                    .sliderm2page__inputs-item
                        .sliderm2page__label ScaleMin
                        input.sliderm2page__input.sliderm-min
                    .sliderm2page__inputs-item
                        .sliderm2page__label ScaleMax
                        input.sliderm2page__input.sliderm-max
                    .sliderm2page__inputs-item
                        .sliderm2page__label Value1
                        input.sliderm2page__input.sliderm-value1
                    .sliderm2page__inputs-item
                        .sliderm2page__label Value2
                        input.sliderm2page__input.sliderm-value2
                    .sliderm2page__inputs-item
                        .sliderm2page__label Step
                        input.sliderm2page__input.sliderm-step
                    .sliderm2page__inputs-item
                        .sliderm2page__label Scale Intervals
                        input.sliderm2page__input.sliderm-intervals
                    .sliderm2page__inputs-item
                        .sliderm2page__label.sliderm2page__label_shot Hint
                        +tick('tick-hint')
                        .sliderm2page__label.sliderm2page__label_shot Interval
                        +tick('tick-interval')
                    .sliderm2page__inputs-item
                        .sliderm2page__label.sliderm2page__label_shot Scale
                        +tick('tick-scale')
                        .sliderm2page__label.sliderm2page__label_shot Vertical
                        +tick('tick-vertical')
                    .sliderm2page__inputs-item
                        .sliderm2page__label Length
                        input.sliderm2page__input.sliderm-length
                    .sliderm2page__inputs-item
                        +chooseColor(200, 100, 200, 255)
                textarea(rows="5").sliderm2page__result
                
        script(src="js/jquery-3.3.1.min.js")
        script(src="js/lc_switch.min.js")
        link(rel="stylesheet" href="css/lc_switch.css")